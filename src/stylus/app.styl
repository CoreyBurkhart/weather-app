// out app.css

.scale
  margin 5rem
  height 50px
  width 600px
  border thin solid black
	p
		margin .2rem 1rem
		padding 0
		float right
		font-size 2.2rem
			display inline-block
	#fill
		padding 0
		display inline-block
		height 100%
		min-width 200px
		max-width 500px
		.triangle
			color black
			height inherit
			width 200px
			background-color #026870
			.button
				width 100px
				.unit
					line-height 1.3
						font-size 2rem
						margin 0 .5rem
							#exchange
								display inline-block
								font-size 1.3rem
								transform translateY(-3px)

.main-container
	display flex
	width 600px
	flex-direction row
	background-color red
	.left, .right
		display flex
		width 45%
		flex-direction column
		background-color orange

.location-search
  text-align center
  border thin solid red
